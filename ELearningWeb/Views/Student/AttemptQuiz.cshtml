@model ELearningWeb.Models.ViewModel.QuizAttemptViewModel

<h2>Attempt Quiz</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Message"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["Error"]</div>
}

<form asp-action="AttemptQuiz" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="QuizId" />
    <input type="hidden" asp-for="StudentId" />
    <div class="form-group mb-3">
        <label asp-for="Answers" class="form-label">Your Answers</label>
        <textarea asp-for="Answers" class="form-control" rows="5" required></textarea>
        <span asp-validation-for="Answers" class="text-danger"></span>
    </div>
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger mt-3">
            @Html.ValidationSummary()
        </div>
    }
    <button type="submit" class="btn btn-primary">Submit Attempt</button>
    <a asp-action="Dashboard" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

